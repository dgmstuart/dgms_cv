source 'http://rubygems.org'

# nanoc generates the site:
gem 'nanoc', '~> 3.7.1'
gem 'guard-nanoc', '~> 1.0'
gem 'guard-livereload', '~> 2.1'

# development webserver:
gem 'adsf', '~> 1.2'

# Use haml for templates:
gem 'haml', '~> 4.0'
# Use sass for stylesheets:
gem 'sass', '~> 3.2'

# These are used by the checks:
gem 'nokogiri', '~> 1.6'
gem 'w3c_validators', '~> 1.2'